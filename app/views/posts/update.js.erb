  // add the row to the table, show alert and hide modal
  $('.new_post div#<%= @post.id %>').replaceWith(' <%= j render "row", post: @post %>');
  growl("success", "El post ha sido modificado con Ã©xito!", '.alerta')
  $('#post-modal').modal('hide');
<% else %>

<% @post.errors.full_messages.each do |msg| %>
  growl("danger", "<%= msg%>", '.errors_validation');
<% end %>
<% end %>
