<div id="post-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <h4 class="modal-title text-center"><%= title %></h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>

      </div>
      <% if @post.errors.any? %>
        <div class="alert alert-danger">
          <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_for @post, remote: true do |f| %>
      <div class="modal-body">
        <div class="alert alert-danger" role="alert" style="display: none;"></div> <!-- como se activa? -->
        <div class="form-group">
          <%= f.text_field :title, class: "form-control input-lg", placeholder: "Titulo del Post" %>
        </div>
        <div class="form-group">
          <%= f.text_field :description, class: "form-control input-lg", placeholder: "DescripciÃ³n del post" %>
        </div>
      </div>

      <div class="modal-footer">
        <%= f.submit class: "btn btn-dark btn-lg btn-block" %>
      </div>
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
