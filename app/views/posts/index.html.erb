<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="text-right">

        <% if user_signed_in? %>
        <%= link_to "Publicar Post", new_post_path, remote: true, class: "btn btn-outline-dark btn-sm" %>
        <% end %>
      </div>

      <% @posts.each do |post| %>
      <br>
      <div class="card box-shadow">
        <div class="card-header">
          <div class="row">
            <div class="col-sm-8 ">
              <h3><%= link_to post.title, post, :class => "text-dark"  %></h3>
            </div>
            <div class="col-sm-4 text-right edit_delete">
              <% if user_signed_in? && current_user.id == post.user_id%>
              <%= link_to "Editar", edit_post_path(post), remote: true, :class => "text-muted"   %>
              <%= link_to "Eliminar", post, method: :delete, data: { confirm: "¿Estás seguro de eliminar este producto?" }, :class => "text-muted"  %>
              <% end %>

            </div>
          </div>
        </div>
        <div class="card-body">
          <p class="card-text text-dark"><%= post.description[0, 250] %></p>

        </div>
        <div class="card-footer text-muted">
          <%total_seconds = ((post.created_at-DateTime.now)/1.minutes).round.abs  %>
          <p>
            Publicado por <%= post.user.email %>   hace:
            <%= Time.at(total_seconds).utc.strftime("%H:%M:%S")%> Horas
          </p>
        </div>
      </div>
      <br>
      <% end %>
    </div>
  </div>
</div>
