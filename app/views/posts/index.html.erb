<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">

      <% @posts.each do |post| %>
        <br>
        <div class="card">
          <h5 class="card-header"><%= post.title %></h5>
          <div class="card-body">
            <p class="card-text"><%= post.description %></p>
          </div>
          <div class="card-footer text-muted">
            publicado por ...
          </div>
        </div>
        <br>
      <% end %>
    </div>
  </div>
</div>
