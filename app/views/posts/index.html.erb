<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="text-right">
        <%= link_to "Publicar Post", new_post_path, remote: true, class: "btn btn-primary" %>
      </div>

      <% @posts.each do |post| %>
        <br>
        <div class="card box-shadow">
        <div class="card-header">
          <div class="row">
            <div class="col-sm-10"><h3><%= link_to post.title, post %></h3></div>

            <div class="col-sm-2">

          <%= link_to "Editar", edit_post_path(post), remote: true %>
          <%= link_to "Eliminar", post, method: :delete, data: { confirm: "¿Estás seguro de eliminar este producto?" } %>
            </div>
          </div>
        </div>
          <div class="card-body">
            <p class="card-text"><%= post.description[0, 250] %></p>

          </div>
          <div class="card-footer text-muted">
            publicado por ...
          </div>
        </div>
        <br>
      <% end %>
    </div>
  </div>
</div>
