    <div class="collapse navbar-collapse " id="navbarSupportedContent">

      <ul class="navbar-nav ml-auto ">
        <% if user_signed_in? %>
        <li class="nav-link text-muted"><%=current_user.email%></li>
        <li class="nav-item">
          <%= link_to "Salir", destroy_user_session_path, method: "delete", :class => "nav-link"  %>
        </li>

          <% else %>
          <li class="nav-item">
            <%= link_to "Ingresar", new_user_session_path, :class => "nav-link"  %>
          </li>
          <li class="nav-item ">
            <%= link_to "RegÃ­strarse", new_user_registration_path, :class => "btn btn-light  "  %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>

  <div class="container" style="margin-top:30px">
    <%= yield %>
  </div>
</body>
</html>
